<div class="container-fluid">

    <div class="jumbotron">
        <h1>Eat Some Burgers!</h1>
    </div>
    <div class="row col-md-12 bottom">
        <h2>Order a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="burger">Enter the name:</label>
                <input type="text" id="burger" name="name">
            </div>
            <button id="add-burger" type="submit">Order It!</button>
        </form>
    </div>
    <div class="row">
        <div class="col-md-6 left">
            <h2>Choose a Burger to Eat:</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 right">
            <h2>Burgers You Devoured:</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>