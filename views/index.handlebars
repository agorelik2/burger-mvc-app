<div class="container-fluid">

    <div class="jumbotron">
        <h1>All You Can Eat Burgers!</h1>
        <img src="../public/assets/images/burger.png" alt="Logo" class="CompanyLogo">

    </div>
    <div class="row col-md-12 bottom">
        <h2>Order a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="burger">Enter the name:</label>
                <input type="text" id="burger" name="name">
            </div>
            <button id="add-burger" type="submit">Order It!</button>
        </form>
    </div>
    <div class="row">
        <div class="col-md-6 left">
            <h2>Choose a Burger to Eat:</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{!-- {{> burgers/burger-block devoured=false}} --}}
                <h4>{{this.burger_name}} <button class="change-devoured" data-id="{{this.id}}">Devour It!</button></h4>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 right">
            <h2>Burgers You Devoured:</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{!-- {{> burgers/burger-block devoured=true}} --}}
                <h4>{{this.burger_name}} <button class="delete-burger" data-id="{{this.id}}">Delete It!</button></h4>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>